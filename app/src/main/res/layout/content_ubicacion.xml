<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbd9f0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.juanelc197gmail.dentalcris2.UbicacionActivity"
    tools:showIn="@layout/activity_ubicacion">

    <!-- Boton de regresar -->
    <!-- <Button
        android:id="@+id/btn_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="regresar" /> -->

    <AdapterViewFlipper
        android:id="@+id/AVF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <ImageButton
        android:id="@+id/img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/mapgo" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="103dp"
        android:text="Dra. Cristina Lopez Hernandez"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AVF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Dentista"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="¡Ubíquenos!"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
</RelativeLayout>
